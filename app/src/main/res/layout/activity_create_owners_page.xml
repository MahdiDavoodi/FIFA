<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".pages.CreateOwnersPage">

    <TextView
        android:id="@+id/createOwnersDescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/raleway_semibold"
        android:padding="20dp"
        android:text="@string/createOwnersDescriptionText"
        android:textAlignment="center"
        android:textColor="@color/mainDescriptionTextColor"
        android:textDirection="ltr"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/createOwnersText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/raleway_semibold"
        android:text="@string/createOwnersFirstOwnerText"
        android:textAlignment="center"
        android:textColor="@color/mainTextColor"
        android:textDirection="ltr"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createOwnersDescriptionText" />

    <EditText
        android:id="@+id/createOwnersNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="70dp"
        android:autoSizeTextType="uniform"
        android:autofillHints="@string/nameHint"
        android:background="@drawable/edit_text_background_1"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/raleway_semibold"
        android:hint="@string/nameHint"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/mainTextColor"
        android:textColorHint="@color/mainDescriptionTextColor"
        android:textDirection="ltr"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/createOwnersText"
        app:layout_constraintStart_toStartOf="@+id/createOwnersText"
        app:layout_constraintTop_toBottomOf="@+id/createOwnersText" />

    <EditText
        android:id="@+id/createOwnersPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="70dp"
        android:autoSizeTextType="uniform"
        android:autofillHints="@string/passwordHint"
        android:background="@drawable/edit_text_background_1"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/raleway_semibold"
        android:hint="@string/passwordHint"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/mainTextColor"
        android:textColorHint="@color/mainDescriptionTextColor"
        android:textDirection="ltr"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/createOwnersNameEditText"
        app:layout_constraintStart_toStartOf="@+id/createOwnersNameEditText"
        app:layout_constraintTop_toBottomOf="@+id/createOwnersNameEditText" />

    <EditText
        android:id="@+id/createOwnersConfirmPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="70dp"
        android:autoSizeTextType="uniform"
        android:autofillHints="@string/passwordHint"
        android:background="@drawable/edit_text_background_1"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/raleway_semibold"
        android:hint="@string/confirmPasswordHint"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/mainTextColor"
        android:textColorHint="@color/mainDescriptionTextColor"
        android:textDirection="ltr"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/createOwnersPasswordEditText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/createOwnersPasswordEditText"
        app:layout_constraintTop_toBottomOf="@+id/createOwnersPasswordEditText" />

    <Button
        android:id="@+id/createOwnersSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="@color/mainButtonColor"
        android:fontFamily="@font/raleway_semibold"
        android:onClick="saveButtonOnClick"
        android:text="@string/createOwnersSaveButtonStage1"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/mainButtonTextColor"
        android:textDirection="ltr"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createOwnersConfirmPasswordEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>