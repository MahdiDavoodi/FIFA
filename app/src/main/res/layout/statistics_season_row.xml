<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="1dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/statistics_season_rank_color"
                android:layout_width="3dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:maxWidth="5dp"
                android:maxHeight="30dp"
                android:minWidth="2dp"
                android:minHeight="20dp"
                app:cardBackgroundColor="@color/mainDescriptionTextColor"
                app:cardCornerRadius="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/statistics_season_club_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:background="@color/transparent"
                android:contentDescription="@string/imageView"
                android:maxWidth="50dp"
                android:maxHeight="50dp"
                android:minWidth="25dp"
                android:minHeight="25dp"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/statistics_season_rank_color"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/club1" />

            <TextView
                android:id="@+id/statistics_season_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/main_font"
                android:padding="5dp"
                android:text="@string/season_team_name"
                android:textAlignment="textStart"
                android:textColor="@color/mainDescriptionTextColor"
                android:textDirection="ltr"
                android:textSize="@dimen/text_size_0_5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/statistics_season_club_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/statistics_season_match_played"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/main_font"
                android:minWidth="35dp"
                android:padding="5dp"
                android:text="@string/season_match_played"
                android:textAlignment="center"
                android:textColor="@color/mainDescriptionTextColor"
                android:textDirection="ltr"
                android:textSize="@dimen/text_size_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/statistics_season_win"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/statistics_season_win"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/main_font"
                android:minWidth="35dp"
                android:padding="5dp"
                android:text="@string/season_win"
                android:textAlignment="center"
                android:textColor="@color/mainDescriptionTextColor"
                android:textDirection="ltr"
                android:textSize="@dimen/text_size_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/statistics_season_loss"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/statistics_season_goal_difference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/main_font"
                android:minWidth="35dp"
                android:padding="5dp"
                android:text="@string/season_goalDifference"
                android:textAlignment="center"
                android:textColor="@color/mainDescriptionTextColor"
                android:textDirection="ltr"
                android:textSize="@dimen/text_size_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/statistics_season_points"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/statistics_season_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/main_font"
                android:minWidth="35dp"
                android:padding="5dp"
                android:text="@string/season_points"
                android:textAlignment="center"
                android:textColor="@color/mainDescriptionTextColor"
                android:textDirection="ltr"
                android:textSize="@dimen/text_size_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/statistics_season_loss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/main_font"
                android:minWidth="35dp"
                android:padding="5dp"
                android:text="@string/season_loss"
                android:textAlignment="center"
                android:textColor="@color/mainDescriptionTextColor"
                android:textDirection="ltr"
                android:textSize="@dimen/text_size_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/statistics_season_draw"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/statistics_season_draw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/main_font"
                android:minWidth="35dp"
                android:padding="5dp"
                android:text="@string/season_draw"
                android:textAlignment="center"
                android:textColor="@color/mainDescriptionTextColor"
                android:textDirection="ltr"
                android:textSize="@dimen/text_size_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/statistics_season_goal_difference"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>